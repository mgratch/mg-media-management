{
  "name": "mgratch/mg-media-management",
  "description": "Leverages local media when available, otherwise falls back to a specified production server. This works with Multisite / Subdirectory installs.",
  "type": "wordpress-plugin",
  "require": {
    "php": ">=8.0",
    "composer/installers": ">=1.0 <3.0"
  },
  "authors": [
    {
      "name": "Marc Gratch",
      "email": "me@marcgratch.com",
      "homepage": "https://marcgratch.com",
      "role": "Developer"
    }
  ],
  "license": "GPL-2.0-or-later",
  "keywords": [
    "wordpress", "media", "management", "multisite", "plugin"
  ],
  "support": {
    "issues": "https://github.com/mgratch/mg-media-management/issues",
    "source": "https://github.com/mgratch/mg-media-management"
  },
  "extra": {
    "installer-name": "mg-media-management"
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true
    }
  }
}
